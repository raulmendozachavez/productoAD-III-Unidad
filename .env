APP_NAME=Laravel                 # Nombre de la aplicación (solo informativo)
APP_ENV=local                    # Entorno: local, staging, production
APP_KEY=base64:iDZ0ubI4oU9tkuqJ8wQ2iWhGBlcmJMCQ+xK6XOxNP74=
                                 # Clave para cifrado (sesiones, passwords, etc.)
APP_DEBUG=true                   # Muestra errores detallados (solo en local)
APP_URL=http://localhost
                                 # URL base del proyecto en tu PC

APP_LOCALE=es                    # Idioma principal
APP_FALLBACK_LOCALE=es           # Idioma de respaldo
APP_FAKER_LOCALE=es_ES           # Idioma para datos falsos (factories)

APP_MAINTENANCE_DRIVER=file      # Cómo Laravel maneja modo mantenimiento
# APP_MAINTENANCE_STORE=database # Alternativa: usar base de datos

# PHP_CLI_SERVER_WORKERS=4       # Workers para servidor embebido (opcional)

BCRYPT_ROUNDS=12                 # Nivel de seguridad para hashing de passwords

LOG_CHANNEL=stack                # Canal de logs principal
LOG_STACK=single                 # Tipo de log (archivo único)
LOG_DEPRECATIONS_CHANNEL=null   # Logs deprecados
LOG_LEVEL=debug                  # Nivel de detalle del log

DB_CONNECTION=mysql              # Motor de base de datos
DB_HOST=127.0.0.1                # Host de MySQL (XAMPP)
DB_PORT=3306                     # Puerto de MySQL
DB_DATABASE=hogar_feliz          # Nombre de la base de datos local
DB_USERNAME=root                 # Usuario MySQL (XAMPP)
DB_PASSWORD=                     # Contraseña MySQL (vacía en XAMPP)

SESSION_DRIVER=database          # Dónde se guardan las sesiones
SESSION_LIFETIME=120             # Minutos antes de expirar la sesión
SESSION_ENCRYPT=false            # Cifrar o no las sesiones
SESSION_PATH=/                   # Ruta de cookies de sesión
SESSION_DOMAIN=null              # Dominio de la sesión

BROADCAST_CONNECTION=log         # Broadcasting (logs en local)
FILESYSTEM_DISK=local            # Almacenamiento de archivos (storage/app)
QUEUE_CONNECTION=database        # Colas usando base de datos

CACHE_STORE=database             # Cache usando base de datos
# CACHE_PREFIX=                  # Prefijo para claves de cache

MEMCACHED_HOST=127.0.0.1         # Host de Memcached (si se usa)

REDIS_CLIENT=phpredis            # Cliente Redis
REDIS_HOST=127.0.0.1             # Host Redis
REDIS_PASSWORD=null              # Password Redis
REDIS_PORT=6379                  # Puerto Redis

MAIL_MAILER=log                  # Emails se escriben en logs (local)
MAIL_SCHEME=null                 # Esquema de mail
MAIL_HOST=127.0.0.1              # Host SMTP
MAIL_PORT=2525                   # Puerto SMTP
MAIL_USERNAME=null               # Usuario SMTP
MAIL_PASSWORD=null               # Password SMTP
MAIL_FROM_ADDRESS="hello@example.com"
                                 # Email remitente
MAIL_FROM_NAME="${APP_NAME}"     # Nombre del remitente

AWS_ACCESS_KEY_ID=               # Credenciales AWS (no usadas)
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"      # Nombre expuesto a Vite (frontend)
